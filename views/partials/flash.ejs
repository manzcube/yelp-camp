
<% if (success && success.length) {%> 
    <div class="alert alert-success alert-dismissible fade show mx-auto w-50 mt-5" role="alert">
        <%= success %> 
        <button type="button" class="btn-close btn-sm" aria-label="Close" data-bs-dismiss="alert" ></button>
    </div>
<% } %> 



<% if (error && error.length) {%> 
    <div class="alert alert-danger alert-dismissible fade show mx-auto w-50 mt-5" role="alert">
        <%= error %> 
        <button type="button" class="btn-close btn-sm" aria-label="Close" data-bs-dismiss="alert" ></button>
    </div>
<% } %> 