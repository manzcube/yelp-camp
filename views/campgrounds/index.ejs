
<% layout('layouts/boilerplate') %> 

<h1>All Campgrounds</h1>

<% for (let campground of campgrounds) {%>
    <a href="/campgrounds/<%=campground.id%>" class="text-decoration-none text-dark">
        <div class="card mb-3">
            <div class="row">
                <div class="col-lg-4">
                    <% if(!campground.images.length) {%> 
                        <img src='https://www.varaka.com/wp-content/uploads/2020/07/resim-yok.png' class="img-fluid">
                    <% } else { %> 
                        <img src='<%=campground.images[0].url%>' class="img-fluid">
                    <% } %> 
                </div>
                <div class="col-lg-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=campground.title%>
                        </h5>
                        <p class="card-text">
                            <%=campground.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=campground.location%>
                            </small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </a>
<% } %> 

