
<% layout('layouts/boilerplate') %> 



<div id="clusters-map" class="mb-5 w-100"></div>



<div class="row d-flex justify-content-center">
    <h1 class="text-center mb-5">All Campgrounds</h1>
    <% for (let campground of campgrounds) {%>
        <a href="/campgrounds/<%=campground.id%>" class="text-decoration-none text-dark">
            <div class="card my-4 w-50 mx-auto rounded shadow-sm">
                <div class="row">
                    <div class="col">
    
                        <% if(campground.images.length) {%> 
                            <img src='<%=campground.images[0].url%>' class="img-fluid">
                        <% } else { %> 
                            <img src='https://www.hopkinsmedicine.org/sebin/o/e/noimageavailable.png' class="img-fluid">
                        <% } %> 
    
                    </div>
                    
                    <div class="col">
                        <div class="card-body">
                            <h5 class="card-title"> <%=campground.title%> </h5>
                            <p class="card-text">
                                <%=campground.description%>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%=campground.location%>
                                </small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    <% } %> 
</div>


